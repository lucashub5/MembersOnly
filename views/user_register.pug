extends layout

block content
  h1=title

  if errorMessage
    p(class='label-error')= errorMessage
  if message
    p= message
    
  form(method='POST')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text', placeholder='Christian', name='first_name', minlength='1', maxlength='20', required value='')
    div.form-group
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text', placeholder='Doe', name='last_name', minlength='1', maxlength='20', required value='')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='example@example.com', name='email', maxlength='50', required value='')
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password', minlength='6', maxlength='30', required value='')
    div.form-group
      label(for='confirm_password') Confirm Password:
      input#confirm_password.form-control(type='password', name='confirm_password', minlength='6', maxlength='30', required value='')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
